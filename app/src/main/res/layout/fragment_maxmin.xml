<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/max_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.HeadlineMedium"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/grades_max"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/min_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/max_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.HeadlineMedium"
        android:gravity="center"
        android:padding="16dp"
        tools:text="10"
        app:layout_constraintStart_toStartOf="@id/max_title"
        app:layout_constraintEnd_toEndOf="@id/max_title"
        app:layout_constraintTop_toBottomOf="@id/max_title" />

    <TextView
        android:id="@+id/min_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.HeadlineMedium"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/grades_min"
        app:layout_constraintStart_toEndOf="@id/max_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/min_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.HeadlineMedium"
        android:gravity="center"
        android:padding="16dp"
        tools:text="10"
        app:layout_constraintStart_toStartOf="@id/min_title"
        app:layout_constraintEnd_toEndOf="@id/min_title"
        app:layout_constraintTop_toBottomOf="@id/min_title" />

</androidx.constraintlayout.widget.ConstraintLayout>